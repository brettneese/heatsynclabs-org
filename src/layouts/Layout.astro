---
import '../styles/tokens.css';
import '../styles/base.css';
import '../styles/utilities.css';
import AppHeader from '../components/layout/AppHeader.astro';
import AppFooter from '../components/layout/AppFooter.astro';

interface Props {
  title?: string;
}

const { title = 'HeatSync Labs' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="HeatSync Labs - Arizona's Community Hackerspace" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app">
      <AppHeader />
      <main class="main">
        <slot />
      </main>
      <AppFooter />
    </div>
  </body>
</html>

<style>
  html {
    font-family: var(--font-sans);
  }
  
  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  #app {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .main {
    flex: 1;
  }
</style>

