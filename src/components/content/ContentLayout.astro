---
import BaseContainer from '../base/BaseContainer.astro';
import { getEntry } from 'astro:content';

interface Props {
  contentEntry: Awaited<ReturnType<typeof getEntry>>;
}

const { contentEntry } = Astro.props;

const { Content } = await contentEntry.render();
const frontmatter = contentEntry.data;
---

<BaseContainer>
  <article class="content-page">
    <header class="content-header">
      <h1 class="content-title">{frontmatter.title}</h1>
      {frontmatter.description && (
        <p class="content-description">{frontmatter.description}</p>
      )}
    </header>
    <div class="content-body">
      <Content />
    </div>
  </article>
</BaseContainer>

<style>
  .content-page {
    padding: var(--space-8) 0;
  }

  .content-header {
    margin-bottom: var(--space-8);
  }

  .content-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-light);
    margin-bottom: var(--space-4);
    color: var(--ink-black);
    font-family: var(--font-sans);
    text-align: center;
  }

  .content-description {
    font-size: var(--text-lg);
    color: var(--warm-gray);
    font-family: var(--font-sans);
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
  }

  .content-body {
    max-width: 800px;
    margin: 0 auto;
  }

  .content-body :global(h2) {
    font-size: var(--text-2xl);
    font-weight: var(--font-medium);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    color: var(--ink-black);
    font-family: var(--font-sans);
    border-bottom: 2px solid var(--accent-rust);
    padding-bottom: var(--space-2);
  }

  .content-body :global(h3) {
    font-size: var(--text-xl);
    font-weight: var(--font-medium);
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
    color: var(--accent-rust);
    font-family: var(--font-mono);
  }

  .content-body :global(h4) {
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    margin-top: var(--space-4);
    margin-bottom: var(--space-2);
    color: var(--accent-rust);
    font-family: var(--font-mono);
  }

  .content-body :global(p) {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    color: var(--graphite);
    font-family: var(--font-sans);
  }

  .content-body :global(ul),
  .content-body :global(ol) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .content-body :global(li) {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-2);
    color: var(--graphite);
    font-family: var(--font-sans);
  }

  .content-body :global(a) {
    color: var(--accent-rust);
    text-decoration: none;
    font-weight: var(--font-medium);
    transition: color var(--transition-base);
  }

  .content-body :global(a:hover) {
    color: var(--accent-sage);
    text-decoration: underline;
  }

  .content-body :global(strong) {
    font-weight: var(--font-semibold);
    color: var(--ink-black);
  }

  .content-body :global(em) {
    font-style: italic;
  }

  .content-body :global(code) {
    background: var(--cream);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }

  .content-body :global(pre) {
    background: var(--cream);
    padding: var(--space-4);
    border-radius: var(--radius-base);
    overflow-x: auto;
    margin-bottom: var(--space-4);
  }

  .content-body :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .content-body :global(blockquote) {
    border-left: 4px solid var(--accent-rust);
    padding-left: var(--space-4);
    margin: var(--space-4) 0;
    color: var(--warm-gray);
    font-style: italic;
  }

  .content-body :global(hr) {
    border: none;
    border-top: 2px solid var(--warm-gray);
    margin: var(--space-8) 0;
  }

  .content-body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-base);
  }

  .content-body :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-4) 0;
  }

  .content-body :global(th),
  .content-body :global(td) {
    padding: var(--space-2) var(--space-4);
    border: 1px solid var(--warm-gray);
  }

  .content-body :global(th) {
    background: var(--cream);
    font-weight: var(--font-medium);
  }

  @media (max-width: 768px) {
    .content-page {
      padding: var(--space-4) 0;
    }

    .content-title {
      font-size: var(--text-3xl);
    }

    .content-description {
      font-size: var(--text-base);
    }

    .content-body :global(h2) {
      font-size: var(--text-xl);
      margin-top: var(--space-6);
    }
  }
</style>
