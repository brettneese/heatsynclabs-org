---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import BaseContainer from '../components/base/BaseContainer.astro';
import BaseButton from '../components/base/BaseButton.astro';
import FullCalendar from '../components/calendar/FullCalendar.vue';
---

<Layout title="Calendar - HeatSync Labs">
  <div class="calendar-page">
    <BaseContainer>
      <FullCalendar client:load />
    </BaseContainer>
  </div>
</Layout>

<style>
  .calendar-page {
    flex: 1;
    padding: var(--space-8) 0;
  }

  @media (max-width: 768px) {
    .calendar-page {
      padding: var(--space-4) 0;
    }
  }
</style>

