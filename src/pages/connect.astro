---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
import BaseContainer from '../components/base/BaseContainer.astro';
import BaseCard from '../components/base/BaseCard.astro';
import ContactForm from '../components/forms/ContactForm.vue';
---

<Layout title="Connect - HeatSync Labs">
  <section class="connect-hero">
    <BaseContainer>
      <h1 class="hero-title">Connect With Us</h1>
      <p class="hero-subtitle">
        Whether you're curious about classes, want to meet our members, or just want to stay in the loop â€” we'd love to hear from you.
      </p>
    </BaseContainer>
  </section>

  <section class="connect-content">
    <BaseContainer>
      <div class="connect-grid">
        <!-- Contact Form Section -->
        <div class="form-section">
          <h2 class="section-title">Get in Touch</h2>
          <p class="section-description">
            Have a question or want to learn more? Drop us a message.
          </p>
          <div class="form-card">
            <ContactForm client:load />
          </div>
        </div>

        <!-- Community Links Section -->
        <div class="links-section">
