</Layout>

<style>
  .connect-hero {
    padding: var(--space-16) 0 var(--space-8);
    background: linear-gradient(135deg, var(--accent-rust) 0%, #c96e4a 100%);
    text-align: center;
  }

  .hero-title {
    font-size: clamp(var(--text-4xl), 8vw, var(--text-6xl));
    font-weight: var(--font-light);
    color: white;
    margin: 0 0 var(--space-4);
    font-family: var(--font-sans);
    letter-spacing: var(--tracking-tight);
  }

  .hero-subtitle {
    font-size: clamp(var(--text-base), 2vw, var(--text-xl));
    color: rgba(255, 255, 255, 0.9);
    margin: 0 auto;
    max-width: 600px;
    line-height: var(--leading-relaxed);
    font-family: var(--font-sans);
  }

  .connect-content {
    padding: var(--space-12) 0 var(--space-16);
    background: var(--paper-white);
  }

  .connect-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  .section-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-medium);
    color: var(--ink-black);
    margin: 0 0 var(--space-2);
    font-family: var(--font-sans);
  }

  .section-description {
    font-size: var(--text-base);
    color: var(--warm-gray);
    margin: 0 0 var(--space-6);
    line-height: var(--leading-relaxed);
    font-family: var(--font-sans);
  }

  .form-card {
    background: var(--cream);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    box-shadow: 2px 2px 8px var(--shadow-light);
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: var(--space-4);
  }

  .link-card {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--cream);
    border-radius: var(--radius-base);
    text-decoration: none;
    transition: all var(--transition-base);
    border: 1px solid transparent;
    box-shadow: 2px 2px 8px var(--shadow-light);
  }

  .link-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 12px var(--shadow-medium);
    border-color: var(--accent-rust);
  }

  .link-card--placeholder {
    opacity: 0.6;
    background: var(--paper-white);
  }

  .link-card--placeholder:hover {
    transform: none;
    box-shadow: 2px 2px 8px var(--shadow-light);
    border-color: transparent;
    cursor: default;
  }

  .link-card--highlight {
    background: var(--ink-black);
    border-color: var(--ink-black);
  }

  .link-card--highlight .link-title,
  .link-card--highlight .link-description {
    color: var(--cream);
  }

  .link-card--highlight .link-description {
    color: rgba(254, 252, 250, 0.8);
  }

  .link-card--highlight:hover {
    background: var(--graphite);
    border-color: var(--graphite);
  }

  .link-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent-rust);
  }

  .link-icon svg {
    width: 24px;
    height: 24px;
  }

  .link-card--highlight .link-icon {
    color: var(--cream);
  }

  .link-content {
    flex: 1;
    min-width: 0;
  }

  .link-title {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--ink-black);
    margin: 0 0 var(--space-1);
    letter-spacing: var(--tracking-wide);
  }

  .link-description {
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    color: var(--warm-gray);
    margin: 0;
    line-height: var(--leading-normal);
  }

  @media (max-width: 1024px) {
    .connect-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .form-section {
      order: 1;
    }

    .links-section {
      order: 2;
    }
  }

  @media (max-width: 768px) {
    .connect-hero {
      padding: var(--space-12) 0 var(--space-6);
    }

    .connect-content {
      padding: var(--space-8) 0 var(--space-12);
    }

    .links-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .connect-hero {
      padding: var(--space-10) 0 var(--space-6);
    }

    .hero-subtitle {
      font-size: var(--text-base);
    }
  }
</style>

